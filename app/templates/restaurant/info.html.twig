{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <h2>{{ restaurant.name }}</h2>
        <div>
            <h3>Locales</h3>
            {% for premises in restaurant.premises %}
                <div>
                    <h5>{{ premises.name }}</h5>
                    <p class="m-0 fw-bold">Address:</p>
                    {% set address = premises.address %}
                    <p class="m-0">{{ address.street }} {{ address.streetNumber }} {{ address.flatNumber }}</p>
                    <p class="m-0">{{ address.postalCode }} {{ address.city.name }}</p>
                </div>
            {% else %}
                <p>No premises assigned to restaurant</p>
            {% endfor %}
        </div>
        <div>
            <h3>Employees</h3>
            {% for employee in restaurant.employees %}
                <p>{{ employee.employee.firstName }} {{ employee.employee.lastName }} ({{ employee.employee.email }})</p>
                <p>roles</p>
                <ul>
                    {% for role in employee.roles %}
                        <li>{{ role }}</li>
                    {% endfor %}
                </ul>
            {% endfor %}
        </div>
    </div>
{% endblock %}
